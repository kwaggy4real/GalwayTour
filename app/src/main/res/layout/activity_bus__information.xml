<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.galwaytour.Bus_Information">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/horizontalScroll">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:id="@+id/citylinkInfo"
            android:layout_margin="2dp"
            android:text="Hi"
            android:background="@color/abc_search_url_text_normal"
            android:drawableLeft="@drawable/ic_citylink"
            />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_below="@+id/citylinkInfo"
                android:text="View Station on Map"
                android:id="@+id/viewcityonmap"
                />

            <TextView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/buseirreanInfo"
                android:text="Hi"
                android:layout_margin="2dp"
                android:background="@color/abc_search_url_text_normal"
                android:layout_toRightOf="@+id/citylinkInfo"
                android:drawableLeft="@drawable/ic_buseirean"
               />


            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_below="@+id/buseirreanInfo"
                android:layout_alignLeft="@+id/buseirreanInfo"
                android:text="View Station on Map"
                android:id="@+id/viewbuseireanonmap"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/gobusInfo"
                android:text="Hi"
                android:layout_margin="2dp"
                android:background="@color/abc_search_url_text_normal"
                android:layout_toRightOf="@+id/buseirreanInfo"
                android:drawableLeft="@drawable/ic_gobus"

                />


            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_below="@+id/gobusInfo"
                android:layout_alignLeft="@+id/gobusInfo"
                android:text="View Station on Map"
                android:id="@+id/viewgobusonmap"
                />

            </RelativeLayout>

        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/sectiontitle"
        android:text="City/Town Time Tables"
        android:textSize="20dp"
        android:layout_margin="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/horizontalScroll"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sectiontitle"
        android:padding="5dp"
        android:background="@color/com_facebook_picker_search_bar_text">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/Bus_401"
        android:text="Salthill to Eyre Square"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:background="@color/abc_search_url_text_normal"
        />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_402_a"
            android:text="Merlin Park - Eyre Square - Seacrest"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_402_b"
            android:text="Seacrest - Eyre Square - Merlin Park"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_403_a"
            android:text="Eyre Square - Castlepark"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_403_b"
            android:text="Castlepark - Eyre Square"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_404_a"
            android:text="Eyre Square - Newcastle"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_404_b"
            android:text="Newcastle - Eyre Square"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_405_a"
            android:text="Ballybane - Eyre Square - Rahoon"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_405_b"
            android:text="Rahoon - Eyre Square - Ballybane"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_407"
            android:text="Eyre Square - Bóthar an Chóiste and return"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_409"
            android:text="Parkmore Ind. Estate - Eyre Square"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_410_a"
            android:text="Eyre Square - Oranmore"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/Bus_410"
            android:text="Oranmore - Eyre Square"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:background="@color/abc_search_url_text_normal"
            />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
