<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/displayEventImage"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventName"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10px"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_below="@+id/displayEventImage"
                android:background="#CDC9C9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventLocation"
                android:textStyle="normal"
                android:textColor="#000000"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10px"
                android:background="#CDC9C9"
                android:layout_below="@+id/eventName"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventStartDate"
                android:textStyle="normal"
                android:textColor="#000000"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10px"
                android:layout_below="@+id/eventLocation"
                android:background="#CDC9C9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventEndDate"
                android:textStyle="normal"
                android:textColor="#000000"

                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10px"
                android:layout_below="@+id/eventStartDate"
                android:background="#CDC9C9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventInformation"
                android:textStyle="normal"
                android:textColor="#000000"

                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10px"
                android:layout_below="@+id/eventEndDate"
                android:background="#CDC9C9"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setReminder"
                android:textStyle="normal"
                android:textColor="#000000"
                android:text="Add to Calendar"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10px"
                android:layout_below="@+id/eventInformation"

                />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

